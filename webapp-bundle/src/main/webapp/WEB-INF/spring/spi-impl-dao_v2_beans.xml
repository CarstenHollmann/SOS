<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">

    <mvc:annotation-driven />
    
    <!-- inject implementation of the Timeseries API's SPI version 2 -->

    <bean id="searchServiceV2" class="org.n52.series.db.srv.v2.Search" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="serviceParameterServiceV2" class="org.n52.series.db.srv.v2.ServiceAccessService" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="categoryParameterServiceV2" class="org.n52.series.db.srv.v2.CategoriesAccessService" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="featureParameterServiceV2" class="org.n52.series.db.srv.v2.FeaturesAccessService" parent="serviceInfoAccess" destroy-method="shutdown" >
       <constructor-arg name="dbSrid" value="EPSG:4326" />
    </bean>
    <bean id="procedureParameterServiceV2" class="org.n52.series.db.srv.v2.ProceduresAccessService" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="platformParameterServiceV2" class="org.n52.series.db.srv.v2.PlatformsAccessService" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="phenomenonParameterServiceV2" class="org.n52.series.db.srv.v2.PhenomenaAccessService"  parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="seriesServiceV2" class="org.n52.series.db.srv.v2.SeriesAccessService" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="metadataServiceV2" class="org.n52.series.db.srv.v2.MetadataAccessService" />

</beans>