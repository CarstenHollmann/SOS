<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">

    <mvc:annotation-driven />

    <bean id="searchService" class="org.n52.series.api.v1.db.srv.Search" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="serviceParameterService" class="org.n52.series.api.v1.db.srv.ServiceAccessService" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="offeringParameterService" class="org.n52.series.api.v1.db.srv.OfferingsAccessService" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="categoryParameterService" class="org.n52.series.api.v1.db.srv.CategoriesAccessService" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="featureParameterService" class="org.n52.series.api.v1.db.srv.FeaturesAccessService" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="procedureParameterService" class="org.n52.series.api.v1.db.srv.ProceduresAccessService" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="stationParameterService" class="org.n52.series.api.v1.db.srv.StationsAccessService" parent="serviceInfoAccess" destroy-method="shutdown" >
       <constructor-arg name="dbSrid" value="EPSG:4326" />
    </bean>
    <bean id="phenomenonParameterService" class="org.n52.series.api.v1.db.srv.PhenomenaAccessService"  parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="timeseriesService" class="org.n52.series.api.v1.db.srv.TimeseriesAccessService" parent="serviceInfoAccess" destroy-method="shutdown" />
    <bean id="metadataService" class="org.n52.series.api.v1.db.srv.MetadataAccessService" />

</beans>