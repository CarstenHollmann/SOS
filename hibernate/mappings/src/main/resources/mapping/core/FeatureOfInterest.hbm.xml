<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.feature.AbstractFeatureOfInterest"
           abstract="true"
           table="featureOfInterest">
        <id name="featureOfInterestId"
            type="long">
			<column name="featureOfInterestId" />
			<generator class="assigned"></generator>
		</id>
		<discriminator formula="(SELECT DISTINCT null FROM dual)" type="string" />
        <discriminator column="hibernatediscriminator" type="string" not-null="false"/>
        <many-to-one name="featureOfInterestType" class="org.n52.sos.ds.hibernate.entities.FeatureOfInterestType" foreign-key="featureFeatureTypeFk">
            <formula>1</formula>
        </many-to-one>
        <property name="identifier" type="string">
            <column name="identifier" unique-key="foiIdentifierUK">
            </column>
        </property>
        <many-to-one name="codespace" class="org.n52.sos.ds.hibernate.entities.Codespace" foreign-key="featureCodespaceIdentifierFk">
            <formula>1</formula>
        </many-to-one>
        <property name="name" type="string">
            <column name="name">
            </column>
        </property>
        <many-to-one name="codespaceName" class="org.n52.sos.ds.hibernate.entities.Codespace" foreign-key="featureCodespaceNameFk">
            <formula>1</formula>
        </many-to-one>
        <property name="description" type="string">
            <formula>null</formula>
        </property>
        <!-- <property name="geom" type="org.hibernate.spatial.GeometryType">
            <column name="geom">
            </column>
        </property> -->
        <property name="descriptionXml" type="org.hibernate.type.StringClobType">
            <formula>null</formula>
        </property>
        <property name="url" type="string">
           <formula>null</formula>
        </property>
        <!-- supports types double, big_decimal, and string -->
         
        <property name="longitude" type="double">
           <column name="lon" unique-key="featLonLatUk">
                <comment>The longitude of the feature. Optional</comment>
            </column>
        </property>
        <property name="latitude" type="double">
        	<column name="lat" unique-key="featLonLatUk">
            	<comment>The latitude of the feature. Optional</comment>
            </column>
        </property>
        <set name="childs" subselect="(SELECT CAST (null as NUMBER(19)) as parentFeatureId CAST (null as NUMBER(19)) as childFeatureId FROM dual)" >
            <key>
                <column name="parentSensorId" not-null="true">
                    </column>
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.Procedure" foreign-key="procedureChildFk">
                <column name="childSensorId" not-null="true">
                    </column>
            </many-to-many>
        </set>
         <set name="parents" subselect="(SELECT CAST (null as NUMBER(19)) as childFeatureId CAST (null as NUMBER(19)) as parentFeatureId FROM dual)" >
            <key>
                <column name="childSensorId" not-null="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.Procedure" foreign-key="procedureParenfFk">
                <column name="parentSensorId" not-null="true" />
            </many-to-many>
        </set>

        <!-- <set name="parameters" table="featureparameter" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="featureOfInterestId" not-null="true" />
            </key>
            <one-to-many class="org.n52.sos.ds.hibernate.entities.parameter.feature.FeatureParameter" />
        </set> -->
    </class>
    <subclass name="org.n52.sos.ds.hibernate.entities.feature.FeatureOfInterest" 
              extends="org.n52.sos.ds.hibernate.entities.feature.AbstractFeatureOfInterest" 
              discriminator-value="null">
    </subclass>
    
</hibernate-mapping>
