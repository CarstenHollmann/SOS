<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.ObservableProperty" table="observableProperty">
        <id name="observablePropertyId" type="long">
            <column name="observablePropertyId">
            </column>
            <generator class="assigned"></generator>
        </id>
        <discriminator formula="(SELECT DISTINCT 'F')" type="org.hibernate.type.TrueFalseType" />
        <property name="identifier" type="string">
            <column name="identifier" not-null="true" unique-key="obsPropIdentifierUK">
            </column>
        </property>
        <many-to-one name="codespace" class="org.n52.sos.ds.hibernate.entities.Codespace" fetch="select" foreign-key="obsPropCodespaceIdentifierFk">
            <formula>1</formula>
        </many-to-one>
        <property name="name" type="string">
            <column name="name">
            </column>
        </property>
        <many-to-one name="codespaceName" class="org.n52.sos.ds.hibernate.entities.Codespace" fetch="select" foreign-key="obsPropCodespaceNameFk">
            <formula>1</formula>
        </many-to-one>
        <property name="description" type="string">
           <formula>null</formula>
        </property>
		<property name="disabled" type="org.hibernate.type.TrueFalseType">
            <formula>'F'</formula>
        </property>
        <property name="hiddenChild" type="org.hibernate.type.TrueFalseType">
            <formula>'F'</formula>
        </property>
        <set name="childs" subselect="(SELECT null::bigint as parentObservablePropertyId, null::bigint as parentObservablePropertyId)" >
        <!-- <set name="childs" table="compositePhenomenon" inverse="false" fetch="select" lazy="false"> -->
            <key>
                <column name="parentObservablePropertyId" not-null="true">
                </column>
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.ObservableProperty" foreign-key="observablePropertyChildFk">
                <column name="childObservablePropertyId" not-null="true">
                </column>
            </many-to-many>
        </set>
        <set name="parents" subselect="(SELECT null::bigint as childObservablePropertyId, null::bigint as parentObservablePropertyId)" >
        <!-- <set name="parents" table="compositePhenomenon" inverse="false" fetch="select" lazy="false" > -->
            <key>
                <column name="childObservablePropertyId" not-null="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.ObservableProperty" foreign-key="observablePropertyParentFk">
                <column name="parentObservablePropertyId" not-null="true" />
            </many-to-many>
        </set>
        
    </class>
</hibernate-mapping>
