<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.Offering" table="offering">
        <id name="offeringId" type="long">
            <column name="offeringId">
            </column>
            <generator class="assigned">
            </generator>
        </id>
        <discriminator formula="(SELECT DISTINCT 'F')" type="org.hibernate.type.TrueFalseType" />
        <property name="identifier" type="string">
            <column name="identifier" not-null="true" unique-key="offIdentifierUK">
            </column>
        </property>
        <many-to-one name="codespace" class="org.n52.sos.ds.hibernate.entities.Codespace" foreign-key="offCodespaceIdentifierFk">
            	<formula>1</formula>
        </many-to-one>
        <property name="name" type="string">
            <column name="name">
            </column>
        </property>
        <many-to-one name="codespaceName" class="org.n52.sos.ds.hibernate.entities.Codespace" foreign-key="offCodespaceNameFk">
            	<formula>1</formula>
        </many-to-one>
        <property name="description" type="string">
            	<formula>null</formula>
        </property>
        <property name="disabled" type="org.hibernate.type.TrueFalseType">
            	<formula>'F'</formula>
        </property>
         <set name="childs" subselect="(SELECT CAST (null as NUMBER(19)) as parentOfferingId CAST (null as NUMBER(19)) as childOfferingId, FROM dual)" >
            <key>
                <column name="parentSensorId" not-null="true">
                    </column>
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.Procedure" foreign-key="procedureChildFk">
                <column name="childSensorId" not-null="true">
                    </column>
            </many-to-many>
        </set>
         <set name="parents" subselect="(SELECT CAST (null as NUMBER(19)) as childOfferingId, CAST (null as NUMBER(19)) as parentOfferingId FROM dual)" >
            <key>
                <column name="childSensorId" not-null="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.Procedure" foreign-key="procedureParenfFk">
                <column name="parentSensorId" not-null="true" />
            </many-to-many>
        </set>
        <set name="observationTypes" table="offeringAllowedObservationType" inverse="false" fetch="select">
            <key>
                <column name="offeringId" not-null="true">
                </column>
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.ObservationType" foreign-key="offeringObservationTypeFk" >
            	<formula>(SELECT CAST (1 as NUMBER(19)) as observationTypeId FROM dual UNION SELECT CAST (2 as NUMBER(19)) as observationTypeId From dual)</formula>
                <!-- <column name="observationTypeId" not-null="true" /> -->
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>
